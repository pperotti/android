<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/route_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="FILE NAME"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/route_file_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="FILE PATH"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/route_file_name" />

    <TextView
        android:id="@+id/route_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="STATE"
        android:layout_marginTop="7dp"
        android:textSize="14dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/route_file_path" />

    <TextView
        android:id="@+id/route_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="TIME"
        android:layout_marginTop="7dp"
        android:textAlignment="center"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/route_file_path" />

</android.support.constraint.ConstraintLayout>